<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.streamapp.ui.splash.SplashScreenController"
           style="-fx-background-color: #1E1E1E;">
    
    <VBox alignment="CENTER" spacing="20">
        <ImageView fx:id="logoImageView" fitWidth="200" fitHeight="200" preserveRatio="true">
            <image>
                <Image url="@/com/streamapp/ui/splash/logo.png"/>
            </image>
        </ImageView>
        
        <Label fx:id="appNameLabel" text="StreamApp" 
               style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        
        <ProgressIndicator fx:id="loadingIndicator" 
                          style="-fx-progress-color: #2196F3;"
                          prefWidth="50" prefHeight="50"/>
        
        <Label fx:id="statusLabel" text="Загрузка..." 
               style="-fx-text-fill: #BDBDBD; -fx-font-size: 14px;"/>
    </VBox>
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</StackPane> 